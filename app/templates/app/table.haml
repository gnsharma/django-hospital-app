{% if not appointment_list %}
  %p You don't have any appointment
{% else %}
  .table-responsive
    %table.table.table-hover.table-striped.table-bordered
      %thead
        %tr
          {% if user.doctor %}
          %th Patient Name
          {% endif %}
          
          {% if user.patient %}
          %th Doctor Name
          {% endif %}
          %th Time
          %th Delete
      %tbody
        {% for appointment in appointment_list %}
        %tr
          {% if user.doctor %}
          %th {{ appointment.patient.user.first_name|capfirst }} {{ appointment.patient.user.last_name|capfirst }}
          {% endif %}
          
          {% if user.patient %}
          %th {{ appointment.doctor.user.first_name }} {{ appointment.doctor.user.last_name }}
          {% endif %}
          
          %th {{ appointment.datetime }}
          %th 
            %a{:href => "{% url 'app:delete-appointment' appointment.id %}" } Delete Appointment
        {% endfor %}
{% endif %}
